<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="Primary" Color="LightSalmon"/>
    <SolidColorBrush x:Key="Secondary" Color="WhiteSmoke"/>

    <Style TargetType="TextBox" >
        <Setter Property="Padding" Value="0" />
        <Setter Property="Margin" Value="5px"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="TextWrapping" Value="NoWrap"/>
    </Style>

    <Style TargetType="TextBlock" >
        <Setter Property="Padding" Value="0" />
        <Setter Property="Foreground" Value="{StaticResource Primary}" />
        <Setter Property="TextWrapping" Value="NoWrap"/>
    </Style>

    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource Secondary}"/>
        <Setter Property="Height" Value="24px"/>
        <Setter Property="Margin" Value="5px"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="{StaticResource Primary}"/>
    </Style>
</ResourceDictionary>
